{
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "commonjs",
    "target": "es2016",
    "lib": [
        "es2016",
        "dom"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
